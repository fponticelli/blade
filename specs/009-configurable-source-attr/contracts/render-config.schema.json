{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RenderConfig Source Tracking Prefix",
  "description": "Schema for the sourceTrackingPrefix field in RenderConfig",
  "type": "object",
  "properties": {
    "sourceTrackingPrefix": {
      "type": "string",
      "description": "Prefix for source tracking attribute names (e.g., 'rd-' produces 'rd-source')",
      "default": "rd-",
      "oneOf": [
        {
          "const": "",
          "description": "Empty string for unprefixed attributes"
        },
        {
          "pattern": "^[a-zA-Z_][a-zA-Z0-9_-]*$",
          "description": "Valid HTML attribute name prefix"
        }
      ],
      "examples": [
        "rd-",
        "data-track-",
        "audit-",
        "",
        "my_prefix_"
      ]
    }
  }
}
