{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "E-commerce Product Catalog",
  "description": "Schema for an e-commerce product listing page",
  "type": "object",
  "required": ["storeName", "products", "currency"],
  "properties": {
    "storeName": {
      "type": "string",
      "description": "Name of the store"
    },
    "tagline": {
      "type": "string",
      "description": "Store tagline or slogan"
    },
    "currency": {
      "type": "string",
      "enum": ["USD", "EUR", "GBP"],
      "description": "Currency for prices"
    },
    "showBanner": {
      "type": "boolean",
      "description": "Whether to show the promotional banner"
    },
    "bannerText": {
      "type": "string",
      "description": "Text for the promotional banner"
    },
    "discountPercent": {
      "type": "number",
      "description": "Site-wide discount percentage"
    },
    "products": {
      "type": "array",
      "description": "List of products",
      "items": {
        "type": "object",
        "required": ["id", "name", "price", "inStock"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Product ID"
          },
          "name": {
            "type": "string",
            "description": "Product name"
          },
          "description": {
            "type": "string",
            "description": "Product description"
          },
          "price": {
            "type": "number",
            "description": "Product price"
          },
          "originalPrice": {
            "type": "number",
            "description": "Original price before discount"
          },
          "inStock": {
            "type": "boolean",
            "description": "Whether product is in stock"
          },
          "stockCount": {
            "type": "number",
            "description": "Number of items in stock"
          },
          "category": {
            "type": "string",
            "description": "Product category"
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Product tags"
          },
          "rating": {
            "type": "number",
            "description": "Average rating (0-5)"
          },
          "reviewCount": {
            "type": "number",
            "description": "Number of reviews"
          }
        }
      }
    },
    "featuredCategories": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of featured category names"
    },
    "contactEmail": {
      "type": "string",
      "format": "email",
      "description": "Contact email address"
    }
  }
}
