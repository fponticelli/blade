@props(skill)

@@{
  let levelClass = skill.level >= 90 ? "expert" :
                   skill.level >= 70 ? "advanced" :
                   skill.level >= 50 ? "intermediate" : "beginner";
}

<div class="skill-item">
  <div class="skill-header">
    <span class="skill-name">$skill.name</span>
    <span class="skill-level">${skill.level}%</span>
  </div>
  <div class="skill-bar">
    <div class="skill-progress $levelClass" style="width: ${skill.level}%"></div>
  </div>
  @if(skill.endorsed > 0) {
    <span class="endorsements">
      ğŸ‘ ${formatNumber(skill.endorsed)} endorsements
    </span>
  }
</div>
