{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Profile Page",
  "description": "Schema for a comprehensive user profile page",
  "type": "object",
  "required": ["user"],
  "properties": {
    "user": {
      "type": "object",
      "required": ["id", "username", "email"],
      "properties": {
        "id": { "type": "string" },
        "username": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "avatar": { "type": "string" },
        "bio": { "type": "string" },
        "location": { "type": "string" },
        "website": { "type": "string" },
        "joinedAt": { "type": "string", "format": "date-time" },
        "lastActive": { "type": "string", "format": "date-time" },
        "verified": { "type": "boolean" },
        "role": { "type": "string", "enum": ["user", "moderator", "admin"] },
        "settings": {
          "type": "object",
          "properties": {
            "theme": { "type": "string", "enum": ["light", "dark", "auto"] },
            "language": { "type": "string" },
            "notifications": {
              "type": "object",
              "properties": {
                "email": { "type": "boolean" },
                "push": { "type": "boolean" },
                "sms": { "type": "boolean" }
              }
            },
            "privacy": {
              "type": "object",
              "properties": {
                "profilePublic": { "type": "boolean" },
                "showEmail": { "type": "boolean" },
                "showActivity": { "type": "boolean" }
              }
            }
          }
        },
        "stats": {
          "type": "object",
          "properties": {
            "followers": { "type": "number" },
            "following": { "type": "number" },
            "posts": { "type": "number" },
            "likes": { "type": "number" },
            "reputation": { "type": "number" }
          }
        },
        "socialLinks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "platform": { "type": "string" },
              "url": { "type": "string" },
              "username": { "type": "string" }
            }
          }
        },
        "badges": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "icon": { "type": "string" },
              "earnedAt": { "type": "string", "format": "date-time" },
              "description": { "type": "string" }
            }
          }
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "level": { "type": "number", "minimum": 0, "maximum": 100 },
              "endorsed": { "type": "number" }
            }
          }
        },
        "experience": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "company": { "type": "string" },
              "role": { "type": "string" },
              "startDate": { "type": "string", "format": "date" },
              "endDate": { "type": "string", "format": "date" },
              "current": { "type": "boolean" },
              "description": { "type": "string" }
            }
          }
        },
        "projects": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "url": { "type": "string" },
              "stars": { "type": "number" },
              "language": { "type": "string" },
              "tags": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "recentActivity": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string", "enum": ["post", "comment", "like", "follow", "achievement"] },
              "description": { "type": "string" },
              "timestamp": { "type": "string", "format": "date-time" },
              "targetUrl": { "type": "string" }
            }
          }
        }
      }
    },
    "isOwnProfile": { "type": "boolean", "description": "Whether viewing own profile" },
    "isFollowing": { "type": "boolean", "description": "Whether current user follows this profile" }
  }
}
