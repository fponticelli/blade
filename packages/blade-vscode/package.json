{
  "name": "blade-templates",
  "displayName": "Blade Templates",
  "description": "Language support for Blade template files (.blade) - syntax highlighting, diagnostics, autocompletion, and code navigation",
  "version": "0.1.0",
  "publisher": "fponticelli",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fponticelli/blade.git",
    "directory": "packages/blade-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "blade",
    "template",
    "html",
    "syntax highlighting",
    "preview",
    "live preview"
  ],
  "activationEvents": [
    "onLanguage:blade"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blade.openPreview",
        "title": "Open Preview",
        "category": "Blade",
        "icon": "$(open-preview)"
      }
    ],
    "keybindings": [
      {
        "command": "blade.openPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == blade"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "blade.openPreview",
          "when": "editorLangId == blade",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "blade",
        "aliases": [
          "Blade",
          "blade"
        ],
        "extensions": [
          ".blade"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "blade",
        "scopeName": "text.blade",
        "path": "./syntaxes/blade.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.expression.blade": "javascript"
        }
      }
    ],
    "configuration": {
      "title": "Blade",
      "properties": {
        "blade.lsp.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable diagnostics"
        },
        "blade.lsp.diagnostics.unusedVariables": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "hint",
            "off"
          ],
          "default": "warning",
          "description": "Severity for unused variable warnings"
        },
        "blade.lsp.diagnostics.deprecatedHelpers": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "hint",
            "off"
          ],
          "default": "warning",
          "description": "Severity for deprecated helper warnings"
        },
        "blade.lsp.diagnostics.deepNesting": {
          "type": "string",
          "enum": [
            "warning",
            "hint",
            "off"
          ],
          "default": "warning",
          "description": "Severity for deep nesting warnings"
        },
        "blade.lsp.diagnostics.deepNestingThreshold": {
          "type": "number",
          "default": 4,
          "description": "Maximum nesting depth before warning"
        },
        "blade.lsp.completion.dataSchemaPath": {
          "type": "string",
          "default": "",
          "description": "Path to JSON schema file for data completions"
        },
        "blade.lsp.completion.helpersDefinitionPath": {
          "type": "string",
          "default": "",
          "description": "Path to helpers definition file for completion"
        },
        "blade.lsp.completion.snippets": {
          "type": "boolean",
          "default": true,
          "description": "Enable snippet completions for directives"
        },
        "blade.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace communication between VS Code and the language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify && npm run bundle-server -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "bundle-server": "esbuild ../blade/src/lsp/server.ts --bundle --outfile=out/server/server.js --format=cjs --platform=node",
    "build": "npm run esbuild-base -- --sourcemap && npm run bundle-server -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "package": "vsce package --no-dependencies",
    "lint": "eslint src --ext ts",
    "vsix:install": "code --install-extension blade-templates-0.1.0.vsix",
    "vscode": "npm run build && npm run package && npm run vsix:install"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@bladets/template": "file:../blade",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  }
}
