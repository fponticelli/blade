{
  "name": "@fponticelli/blade",
  "version": "0.1.0",
  "description": "Blade - Sharp templates for modern apps",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts --fix",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint:fix && npm run lint && npm run build && npm run test",
    "clean": "rm -rf dist coverage .turbo"
  },
  "keywords": [
    "template",
    "template-engine",
    "html",
    "rendering",
    "blade"
  ],
  "author": "Franco Ponticelli",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fponticelli/blade.git",
    "directory": "packages/blade"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.8"
  },
  "dependencies": {}
}
